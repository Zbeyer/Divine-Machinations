:root {
	--background: #18181d;
	--primary-color: #d0d0d0;
	--secondary-color: #f0e090;
	--accent-color: #e6bd73;

	--gold: #b79a75;

	--linkColor: #3080d0;
	--linkHoverColor: #d08050;
}

* {
	box-sizing: border-box;
}

#my-data {
	text-align: left;
}

/* Style for the tab buttons */
.tabs button {
	/*   background-color: #f0f10f0; */
	border: 1px solid #ccc;
	border-bottom: none; /* Makes it look connected to the content */
	padding: 10px 20px;
	cursor: pointer;
	font-size: 16px;
	margin: 0;
	border-radius: 0;
	width: 33.32%;
}

.tabs button:hover {
	background-color: #e0e0e0; /* Slight hover effect */
}

.tabs button.active {
	background-color: #ffffff; /* Active tab color */
	border-bottom: 2px solid #ffffff; /* Seamless connection to content */
}

/* Container for tabs to align horizontally */
.tabs {
	display: flex;
	justify-content: flex-start;
	border-bottom: 1px solid #ccc; /* Divider between tabs and content */
}

.table-container {
	overflow-x: auto;
	width: 100%;
}

table {
	width: 100%;
	border-collapse: collapse;
}

body {
	background: #0d0d0d;
	color: white;
	font-size: 120%;
	font-family: 'OpenDyslexic', 'Raleway', Verdana, sans-serif;
	text-align: center;
	margin: auto;
	max-width: 1200px;
	padding: 0.25em;
}

img {
	object-fit: cover;
}

header,
nav,
footer,
section {
	text-align: left;
	background-color: var(--background);
	padding: 0.1em 1em;
	border-radius: 1em;
	margin-top: 1em;
}

h1 {
	color: var(--primary-color);
	font-size: 3em;
}

h3 {
	font-size: 2em;
}

code,
h2,
h3,
h4 {
	color: var(--secondary-color);
}

code {
	font-size: 1.254em;
}

hr {
	border: none;
	height: 1px;
	background-color: var(--accent-color);
}

.item-slot,
.slot-name {
	background: #0d0d0d;
	width: 80px;
	margin: 0.2em;
	border-radius: 8px;
	border: 1px solid var(--accent-color);
	text-align: center;
	font-family: sans-serif;
	text-transform: uppercase;
	border-radius: 8px;
	font-weight: bold;
	font-size: 0.5em;
}

.item-slot {
	height: 80px;
}

.slot-outer {
	display: vertical;
	justify-content: space-evenly;
	/* 	align-items: center; */
}

.gear {
	display: column;
	vertical-align: middle;
	border-radius: 8px;
	max-width: 188px;
	height: 0.5em auto;
}

table {
	max-width: 100%;
	background: black;
	border-radius: 8px
}

th,
tr,
td {
	padding: 0.5em;
}

tr {
	text-align: top;
	padding: 1em;
	text-align: left;
}

p .gear-caption {
	width: 128px;
}

.gear-description {
	width: 128px;
}

.str {
	background: radial-gradient(#c00020, black);
	color: #ffccd0;
}

.dex {
	background: radial-gradient(#008050, black);
	color: #ccffe0;
}

.con {
	background: radial-gradient(#a04000, black);
	color: #ffe0cc;
}

.int {
	background: radial-gradient(#005080, black);
	color: #ccebff;
}

.wis {
	background: radial-gradient(#5000c0, black);
	color: #e0ccff;
}

.cha {
	background: radial-gradient(#b00070, black);
	color: #ffcceb;
}

.world-building, img {
	max-width: 640px;
	width: 100%;
	border-radius: 8px;
}

p.score strong {
	font-size: 1.5em;
	display: inline-block;
	width: 100%;
	margin-top: -16px;
	line-height: 16px;
}

.score {
	border-radius: 64px;
	height: 80px;
	width: 80px;
}

.abilityScores {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
}

.abilityScores h4 {
	padding: 0.2em;
}

p.score {
	font-weight: normal;
	border: 2px solid var(--gold);
	font-size: 1em;
	height: 80x;
	width: 80x;

}

.center {
	text-align: center;
	margin: auto;
}


#character-list button {
	display: block;
	width: 100%;
	border: none;
	text-align: left;
	font-family: monospace;
	color: var(--gold);
	text-transform: uppercase;
}

#character-sheet {
	display: block;
	width: 100%;
	border: none;
	border-radius: 8px;
	background-color: #123;
	padding: 1.0em;
	margin: 0 auto;
	text-align: left;
	text-transform: capitalize;
}

#character-sheet h4 {
	display: inline-block;
	text-align: center;
	margin-right: 1em;
	margin-left: 0;
}

.editable-field {
	border: 1px solid #ccc;
	padding: 10px;
	width: 200px;
	cursor: pointer;
}

.editable-field:focus {
	border-color: #0066cc;
	outline: none;
}

@media only screen and (max-width: 420px) {
	h1 {
		font-size: 2em;
	}

	h2 {
		font-size: 1.5em;
	}

	h3 {
		font-size: 1.25em;
	}

	h4, h5, h6 {
		font-size: 1.0em;
	}
}